// Orbital Platform Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Organizations (multi-tenant)
model Organization {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users         User[]
  customers     Customer[]
  integrations Integration[]
  pipelines    Pipeline[]
  agents        Agent[]
  evalRuns      EvalRun[]
  templates     IntegrationTemplate[]

  @@map("organizations")
}

// Users with RBAC
model User {
  id             String   @id @default(uuid())
  email          String   @unique
  emailVerified  DateTime? @map("email_verified")
  name           String?
  password       String?  // Hashed password for credentials provider
  image          String?
  organizationId String   @map("organization_id")
  role           String   @default("fde") // fde, solutions_architect, customer
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customers    Customer[]     @relation("CustomerOwner")
  integrations Integration[]
  tasks        Task[]
  notes        Note[]
  accounts     Account[]
  sessions     Session[]

  @@map("users")
}

// NextAuth required models
model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Customers (clients)
model Customer {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  name           String
  stage          String   @default("discovery") // discovery, pilot, rollout, live
  ownerId        String?  @map("owner_id")
  successMetrics Json?    // Store KPIs as JSON
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  owner        User?        @relation("CustomerOwner", fields: [ownerId], references: [id])
  integrations Integration[]
  pipelines    Pipeline[]
  agents        Agent[]
  notes         Note[]
  tasks         Task[]
  evalRuns      EvalRun[]

  @@map("customers")
}

// Integration Templates
model IntegrationTemplate {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  name           String
  description    String?
  checklistItems Json     // Array of checklist item definitions
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  integrations Integration[]

  @@map("integration_templates")
}

// Integrations (customer implementations)
model Integration {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  customerId      String   @map("customer_id")
  templateId     String?  @map("template_id")
  name           String
  status         String   @default("discovery") // discovery, build, pilot, launch
  phase          String   @default("discovery")
  ownerId        String?  @map("owner_id")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization         @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customer      Customer              @relation(fields: [customerId], references: [id], onDelete: Cascade)
  template     IntegrationTemplate? @relation(fields: [templateId], references: [id])
  owner        User?                @relation(fields: [ownerId], references: [id])
  checklistItems ChecklistItem[]
  artifactLinks ArtifactLink[]
  tasks        Task[]

  @@map("integrations")
}

// Checklist Items
model ChecklistItem {
  id            String   @id @default(uuid())
  integrationId String   @map("integration_id")
  title         String
  description   String?
  state         String   @default("pending") // pending, in_progress, completed, blocked
  category      String?  // Access, Data, Agents, Testing
  dueDate       DateTime? @map("due_date")
  linkedTaskId  String?   @map("linked_task_id")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  integration Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  @@map("checklist_items")
}

// Artifact Links (repos, environments, pipelines)
model ArtifactLink {
  id            String   @id @default(uuid())
  integrationId String   @map("integration_id")
  type          String   // repo, environment, pipeline, dashboard
  url           String
  name          String?
  metadata      Json?    // Additional context
  createdAt     DateTime @default(now())

  integration Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  @@map("artifact_links")
}

// Pipelines
model Pipeline {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  customerId      String   @map("customer_id")
  name           String
  type           String   // ingest, transform, eval
  lastRunAt      DateTime? @map("last_run_at")
  status         String   @default("unknown") // success, failed, running, unknown
  metadata       Json?    // Configuration, logs link, etc.
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customer      Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("pipelines")
}

// Agent Configurations
model Agent {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  customerId      String   @map("customer_id")
  name           String
  purpose        String?
  model          String?
  environment    String?
  lastEvalId     String?  @map("last_eval_id")
  metadata       Json?    // Guardrails, config, etc.
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customer      Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("agents")
}

// Eval Runs
model EvalRun {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  customerId      String?  @map("customer_id")
  agentId        String?  @map("agent_id")
  suite          String   // Suite name
  dataset        String?
  passRate       Float    @map("pass_rate")
  totalTests     Int      @map("total_tests")
  passedTests    Int      @map("passed_tests")
  tokens         Int?
  duration       Int?     // milliseconds
  trigger        String   @default("manual") // manual, scheduled, webhook
  payload        Json?    // Full eval results
  metadata       Json?    // Additional metrics
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customer      Customer?     @relation(fields: [customerId], references: [id], onDelete: SetNull)

  @@map("eval_runs")
}

// Tasks
model Task {
  id            String   @id @default(uuid())
  customerId     String?  @map("customer_id")
  integrationId String?  @map("integration_id")
  ownerId       String?  @map("owner_id")
  title         String
  description   String?
  status        String   @default("open") // open, in_progress, completed, blocked
  priority      String?  @default("medium")
  dueDate       DateTime? @map("due_date")
  source        String?  // note, checklist, manual, ai
  metadata      Json?    // Linked context
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  customer      Customer?      @relation(fields: [customerId], references: [id], onDelete: SetNull)
  integration Integration?  @relation(fields: [integrationId], references: [id], onDelete: SetNull)
  owner       User?         @relation(fields: [ownerId], references: [id], onDelete: SetNull)

  @@map("tasks")
}

// Notes (meeting notes, proposals, updates)
model Note {
  id            String   @id @default(uuid())
  customerId     String?  @map("customer_id")
  authorId      String   @map("author_id")
  title         String
  content       String   // Rich text content
  type          String   @default("note") // note, proposal, update, meeting
  template      String?
  version       Int      @default(1)
  shareableLink String?  @map("shareable_link") @unique
  clientVisible Boolean  @default(false) @map("client_visible")
  metadata      Json?    // Linked integrations, tasks, etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  customer Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)
  author  User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("notes")
}

